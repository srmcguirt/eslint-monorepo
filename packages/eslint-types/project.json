{
  "name": "eslint-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/eslint-types/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/eslint-types/dist"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs eslint-types {args.ver} {args.tag}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "{workspaceRoot}/coverage/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/eslint-types/**/*.ts"
        ],
        "fix": true
      }
    }
  },
  "tags": []
}
